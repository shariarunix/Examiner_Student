<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_radius_top_bg"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/barlow_semibold"
        android:text="@string/change_your_information"
        android:textColor="@color/blue_pr"
        android:textSize="34sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edt_bg">

        <ImageView
            style="@style/edt_icon_style"
            android:src="@drawable/ic_user"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/edt_change_name"
            style="@style/edt_txt_style"
            android:importantForAutofill="no"
            android:inputType="text" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edt_bg">

        <ImageView
            style="@style/edt_icon_style"
            android:src="@drawable/ic_phone"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/edt_change_phone"
            style="@style/edt_txt_style"
            android:importantForAutofill="no"
            android:inputType="phone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edt_bg">

        <ImageView
            style="@style/edt_icon_style"
            android:src="@drawable/ic_phone"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/edt_change_guardian_phone"
            style="@style/edt_txt_style"
            android:importantForAutofill="no"
            android:inputType="phone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/show_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/red_sc_bg"
        android:fontFamily="@font/barlow_regular"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingEnd="20dp"
        android:paddingBottom="12dp"
        android:textColor="@color/red_pr"
        android:textSize="16sp"
        android:visibility="gone" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_change_information"
        style="@style/blue_btn_style"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:text="@string/submit" />

</LinearLayout>