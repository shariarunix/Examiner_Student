<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/white_radius_top_bg">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/enter_the_otp"
        android:textSize="34sp"
        android:textColor="@color/blue_pr"
        android:fontFamily="@font/barlow_semibold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/enter_otp"
        android:textSize="18sp"
        android:textColor="@color/black_sc"
        android:fontFamily="@font/barlow_regular"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/otp_one"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:padding="20dp"
            android:layout_marginEnd="20dp"
            android:inputType="number"
            android:textSize="20sp"
            android:textColor="@color/black_pr"
            android:gravity="center"
            android:maxLength="1"
            android:background="@drawable/otp_bg"
            tools:ignore="Autofill,LabelFor" />
        <EditText
            android:id="@+id/otp_two"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:padding="20dp"
            android:layout_marginEnd="20dp"
            android:inputType="number"
            android:textSize="20sp"
            android:textColor="@color/black_pr"
            android:gravity="center"
            android:maxLength="1"
            android:background="@drawable/otp_bg"
            tools:ignore="Autofill,LabelFor" />
        <EditText
            android:id="@+id/otp_three"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:padding="20dp"
            android:layout_marginEnd="20dp"
            android:inputType="number"
            android:textSize="20sp"
            android:textColor="@color/black_pr"
            android:gravity="center"
            android:maxLength="1"
            android:background="@drawable/otp_bg"
            tools:ignore="Autofill,LabelFor" />
        <EditText
            android:id="@+id/otp_four"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:padding="20dp"
            android:inputType="number"
            android:textSize="20sp"
            android:textColor="@color/black_pr"
            android:gravity="center"
            android:maxLength="1"
            android:background="@drawable/otp_bg"
            tools:ignore="Autofill,LabelFor" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Didn't receive the code."
            android:textSize="16sp"
            android:textColor="@color/black_sc"
            android:fontFamily="@font/barlow_regular"
            tools:ignore="HardcodedText"/>
        <TextView
            android:id="@+id/txt_btn_otp_resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Resend"
            android:textSize="16sp"
            android:textColor="@color/blue_pr"
            android:fontFamily="@font/barlow_semibold"
            tools:ignore="HardcodedText" />

    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_enter_otp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="@string/continue_btn"
        style="@style/blue_btn_style"/>

</LinearLayout>