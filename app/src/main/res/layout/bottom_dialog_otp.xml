<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_radius_top_bg"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/barlow_semibold"
        android:text="@string/enter_the_otp"
        android:textColor="@color/blue_pr"
        android:textSize="34sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/barlow_regular"
        android:text="@string/enter_otp"
        android:textColor="@color/black_sc"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <EditText
            android:id="@+id/otp_one"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@drawable/otp_bg"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:padding="20dp"
            android:textColor="@color/black_pr"
            android:textSize="20sp"
            tools:ignore="Autofill,LabelFor" />

        <EditText
            android:id="@+id/otp_two"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@drawable/otp_bg"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:padding="20dp"
            android:textColor="@color/black_pr"
            android:textSize="20sp"
            tools:ignore="Autofill,LabelFor" />

        <EditText
            android:id="@+id/otp_three"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@drawable/otp_bg"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:padding="20dp"
            android:textColor="@color/black_pr"
            android:textSize="20sp"
            tools:ignore="Autofill,LabelFor" />

        <EditText
            android:id="@+id/otp_four"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/otp_bg"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:padding="20dp"
            android:textColor="@color/black_pr"
            android:textSize="20sp"
            tools:ignore="Autofill,LabelFor" />

    </LinearLayout>

    <TextView
        android:id="@+id/otp_dialog_show_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/red_sc_bg"
        android:fontFamily="@font/barlow_regular"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingEnd="20dp"
        android:paddingBottom="12dp"
        android:textColor="@color/red_pr"
        android:textSize="16sp"
        android:visibility="gone" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_enter_otp"
        style="@style/blue_btn_style"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:text="@string/continue_btn" />

</LinearLayout>