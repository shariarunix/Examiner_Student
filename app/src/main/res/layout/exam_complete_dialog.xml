<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/white_radius_top_bg"
    android:padding="20dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/congratulation"
        android:textSize="32sp"
        android:textColor="@color/blue_pr"
        android:fontFamily="@font/barlow_semibold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/answered_all"
        android:textSize="16sp"
        android:textColor="@color/black_sc"
        android:fontFamily="@font/barlow_regular"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:padding="20dp"
        android:orientation="vertical"
        android:background="@drawable/blue_sc_bg">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/your_score_txt"
            android:textSize="24sp"
            android:textAlignment="center"
            android:textColor="@color/black_pr"
            android:fontFamily="@font/barlow_regular"/>

        <TextView
            android:id="@+id/txt_show_exam_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="48sp"
            android:textColor="@color/blue_pr"
            android:fontFamily="@font/barlow_semibold"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_exam_complete_continue"
        android:layout_marginBottom="20dp"
        android:text="@string/submit"
        style="@style/blue_btn_style"/>
</LinearLayout>